            android:name="com.example.futbol.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="calendarioActivity"
            android:label="@string/calendario"></activity>
        <activity android:name="clasificacionActivity"
            android:label="@string/clasificacion"></activity>
        <activity android:name="equipoActivity"
            android:label="@string/equipo"></activity>
        <activity android:name="resultadosActivity"
            android:label="@string/resultados"></activity>
        <activity android:name="goleadoresActivity"
            android:label="@string/goleadores"></activity>
        
    </application>

</manifest>
